                    <listitem>
                      <para>accepts three string values</para>
                    </listitem>

                    <listitem>
                      <para>
                        first is string inside which we want to replace
                        string
                      </para>
                    </listitem>

                    <listitem>
                      <para>second is the from string</para>
                    </listitem>

                    <listitem>
                      <para>third is to string</para>
                    </listitem>

                    <listitem>
                      <para>returns string value</para>
                    </listitem>
                  </itemizedlist>
                </listitem>
              </varlistentry>

              <varlistentry>
                <term>
                  <command>spn</command>
                </term>

                <listitem>
                  <itemizedlist>
                    <listitem>
                      <para>
                        calculate initial length of string which contains
