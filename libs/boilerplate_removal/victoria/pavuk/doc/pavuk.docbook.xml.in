                      <para>accepts two numeric values</para>
                    </listitem>

                    <listitem>
                      <para>returns numeric value; return 0 if divisor is 0</para>
                    </listitem>
                  </itemizedlist>
                </listitem>
              </varlistentry>

              <varlistentry>
                <term>
                  <command>*</command>
                </term>

                <listitem>
                  <itemizedlist>
                    <listitem>
                      <para>multiply two numeric values</para>
                    </listitem>

                    <listitem>
                      <para>accepts two numeric values</para>
                    </listitem>

                    <listitem>
                      <para>returns numeric value</para>
                    </listitem>
                  </itemizedlist>
                </listitem>
              </varlistentry>

