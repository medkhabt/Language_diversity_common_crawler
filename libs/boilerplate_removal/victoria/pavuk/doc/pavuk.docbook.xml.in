                    </listitem>

                    <listitem>
                      <para>accepts three string values</para>
                    </listitem>

                    <listitem>
                      <para>
                        first is string inside which we want to replace
                        characters
                      </para>
                    </listitem>

                    <listitem>
                      <para>
                        second is set of characters which we want to
                        replace
                      </para>
                    </listitem>

                    <listitem>
                      <para>
                        third is set of characters with which we want to
                        replace those with
                      </para>
                    </listitem>

                    <listitem>
                      <para>returns string value</para>
                    </listitem>
                  </itemizedlist>
                </listitem>
              </varlistentry>

              <varlistentry>
                <term>
                  <command>ts</command>
