                      </para>
                    </listitem>

                    <listitem>
                      <para>returns string value</para>
                    </listitem>
                  </itemizedlist>
                </listitem>
              </varlistentry>

              <varlistentry>
                <term>
                  <command>tc</command>
                </term>

                <listitem>
                  <itemizedlist>
