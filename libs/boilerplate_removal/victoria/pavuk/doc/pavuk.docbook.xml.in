                  <itemizedlist>
                    <listitem>
                      <para>subtract two numeric values</para>
                    </listitem>

                    <listitem>
                      <para>accepts two numeric values</para>
                    </listitem>

                    <listitem>
                      <para>returns numeric value</para>
                    </listitem>
                  </itemizedlist>
                </listitem>
              </varlistentry>

              <varlistentry>
                <term>
                  <command>%</command>
                </term>

                <listitem>
                  <itemizedlist>
                    <listitem>
                      <para>calculate modulo remainder</para>
