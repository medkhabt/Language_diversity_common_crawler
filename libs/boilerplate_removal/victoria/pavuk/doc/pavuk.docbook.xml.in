                    <listitem>
                      <para>accepts two numeric values</para>
                    </listitem>

                    <listitem>
                      <para>returns numeric value</para>
                    </listitem>
                  </itemizedlist>
                </listitem>
              </varlistentry>

              <varlistentry>
